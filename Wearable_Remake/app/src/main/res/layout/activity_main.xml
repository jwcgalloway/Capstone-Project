<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qut.wearable_remake.MainActivity"
    android:id="@+id/mainLayout"
    android:scrollbarStyle="outsideInset"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/todayLbl"
                android:id="@+id/todayLbl"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/abc_secondary_text_material_light" />

            <view
                android:layout_width="180dp"
                android:layout_height="180dp"
                class="qut.wearable_remake.ProgressClock"
                android:layout_margin="10dp"
                android:id="@+id/progressClock" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/movesTodayLbl"
                android:id="@+id/moveCountLbl"
                android:gravity="center" />

            <com.github.mikephil.charting.charts.LineChart
                android:layout_height="200dp"
                android:id="@+id/accLineGraph"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="322dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:layout_height="200dp"
                android:id="@+id/movementBarGraph"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="322dp" />

            <TextView
                android:text="@string/moveGoalLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/moveGoalLbl"
                android:layout_weight="0.13"
                android:textAlignment="center"
                android:labelFor="@+id/moveGoalEditTxt" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/moveGoalEditTxt"
                android:layout_weight="0.18"
                android:text="@string/hundredLbl"
                android:textAlignment="center" />

            <Button
                android:text="@string/moveGoalBtn"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:id="@+id/moveGoalBtn"
                android:layout_weight="0.20" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recDataLbl"
                android:id="@+id/recAccSwitch"
                android:checked="false" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/liveGraphLbl"
                android:id="@+id/liveGraphSwitch"
                android:checked="true" />

            <Switch
                android:text="@string/sendHapticsLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sendHapticsSwitch"
                android:checked="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/removeTileLbl"
                android:id="@+id/removeTileBtn" />

        </LinearLayout>
</ScrollView>
