<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qut.wearable_remake.MainActivity"
    android:id="@+id/mainLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toDebugLbl"
        android:id="@+id/toDebugBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/removeTileLbl"
        android:id="@+id/removeTileBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/moveCountLbl"
        android:id="@+id/moveCountLbl"
        android:layout_below="@+id/recAccSwitch"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="1000dp"
        android:layout_height="70dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/moveCountTxt"
        android:textSize="50sp"
        android:layout_below="@+id/moveCountLbl"
        android:layout_centerHorizontal="true"
        android:gravity="center" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recDataLbl"
        android:id="@+id/recAccSwitch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:layout_alignEnd="@+id/removeTileBtn" />

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/mChart"
        android:layout_above="@+id/toDebugBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp" />

</RelativeLayout>
